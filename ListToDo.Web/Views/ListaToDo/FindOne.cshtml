@model ListToDo.Web.Models.ListToDo
@{
    ViewBag.Title = "FindOne";
}

<section>

    <div class="form-group">
        <label class="col-md-4 control-label">Nome:</label>
        <label class="col-md-4 control-label">@Html.Raw(Model.NomeItem)</label>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">Descrição:</label>
        <label class="col-md-4 control-label">@Html.Raw(Model.DescricaoItem)</label>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">Status:</label>
        <label class="col-md-4 control-label">@Html.Raw(Model.Status)</label>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">Data Criação:</label>
        <label class="col-md-4 control-label">@Html.Raw(Model.DataDeCriacao)</label>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label"></label>
        <div class="col-md-4">

            @*@Html.ActionLink()*@
            <button type="submit" class="btn btn-primary">Editar<span class="glyphicon glyphicon-pencil"></span></button>
            <button type="submit" class="btn btn-danger">Deletar<span class="glyphicon glyphicon-trash"></span></button>
        </div>
    </div>
</section>

