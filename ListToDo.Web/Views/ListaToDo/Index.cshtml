@model ListToDo.Web.Models.ViewModels.ListaDeItemViewModel
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-6">
            <h2 class="text-center">Itens Pendentes</h2>            
            @if (Model.ListToDo_Pendetens.Count >= 1)
            {
                foreach (var item in Model.ListToDo_Pendetens)
                {
                    <div class="col-lg-3 card-pendente">
                        @Html.ActionLink(item.NomeItem, "FindOne", new { id = item.Id }, new { @class = "" })
                        @Html.ActionLink("Finalizar", "Finalizar", new { id = item.Id }, new { @class = "btn btn-success" })

                    </div>
                }
            }
            else
            {
                <div class="alert alert-danger" role="alert">Não há item Pendente</div>
            }
        </div>

        <div class="col-lg-6">
            <h2 class="text-center">Itens Concluído</h2>
            @if (Model.ListToDo_Concluidas.Count >= 1)
            {
                foreach (var item in Model.ListToDo_Concluidas)
                {
                    <div class="col-lg-3 card-concluido">
                        @Html.Raw(item.NomeItem)
                        @Html.Raw(item.DescricaoItem)
                        @Html.Raw(item.DataConclusao)
                    </div>
                }
            }
            else
            {
                <div class="alert alert-danger" role="alert">Não há item Concluido</div>
            }
        </div>
    </div>
</div>
